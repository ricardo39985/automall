
<%=form_for (listing) do |f| %>
<% if listing.errors.any? %>

<% @listing.errors.full_messages.each do |error| %>
  <p><%=error%></p>
<% end %>
  
<% end %>
  <p>
    Year <%= f.select :year, (Time.zone.now.year - 100)..(Time.zone.now.year + 1) %>
    
  </p>
  <p>
    <%= f.label :make %><br />
    <%= f.text_field :make %>
  </p>
  <p>
    <%= f.label :model %><br />
    <%= f.text_field :model %>
  </p>
  <p>
    <%= f.label :miles %><br />
    <%= f.number_field :miles %>
  </p>
  <p>
    <%= f.label :features %><br />
    <%= f.text_field :features %>
  </p>
  <p>
    <%= f.label :color %><br />
    <%= f.text_field :color %>
  </p>
  
  <p><%= f.submit%></p>
<% end %>
